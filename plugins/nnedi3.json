{
	"name": "NNEDI3",
	"type": "VSPlugin",
	"description": "Field interpolator/deinterlacer",
	"website": "https://github.com/dubhater/vapoursynth-nnedi3",
	"identifier": "com.deinterlace.nnedi3",
	"vsrepo": "nnedi3.json",
	"runtime_dependencies": [
	],
	"file_definitions": {
		"nnedi3-test.vpy": {
			"path": "{TESTDIR}",
			"encoding": "text/utf-8",
			"data": "import vapoursynth as vs\ncore = vs.core\ncore.std.LoadPlugin('{TESTDIR}/{PLUGIN_FILENAME}')\nc = core.std.BlankClip(format=vs.YUV420P8,width=320,height=240,length=10)\nc = core.nnedi3.nnedi3(clip=c,field=0)\nc.set_output(0)\n"
		}
	},
	"tests": [
		{
			"name" : "process-blank",
			"create_files" : ["nnedi3-test.vpy"],
			"commands": [
				{ "cmd": [ "cp", "{BUILDDIR}/vapoursynth-nnedi3-12/src/nnedi3_weights.bin", "{TESTDIR}/nnedi3_weights.bin" ] },
				{ "cwd": "{TESTDIR}", "cmd": ["{VSPIPE}", "nnedi3-test.vpy", "--"] }
			]
		}
	],
	"releases": [
		{
			"version": "v12",
			"published": "2018-09-29T16:09:17Z",
			"source": "https://github.com/dubhater/vapoursynth-nnedi3/archive/refs/tags/v12.tar.gz",
			"filename": "vapoursynth-nnedi3-12.tar.gz",
			"hash": "235f43ef4aac04ef2f42a8c44c2c16b077754a3e403992df4b87c8c4b9e13aa5",
			"buildtools_dependencies": {
				".*": [
					{
						"name": "automake",
						"version": [">=", "1.15"]
					},
					{
						"name": "autoconf",
						"version": [">=", "2.7"]
					}
				],
				"linux-.*": [
					{
						"name": "libtool",
						"version": [">=", "2.4"]
					}
				],
				"darwin-.*": [
					{
						"name": "glibtool",
						"version": [">=", "2.4"]
					}
				],
				".*-x86_64.*": [
					{
						"name": "yasm",
						"version": [">=", "1.3.0"]
					}
				]
			},
			"build": {
				".*": {
					"dependencies": [
					],
					"commands": [
						{ "cmd": ["tar", "xzf", "vapoursynth-nnedi3-12.tar.gz"] },
						{ "cwd": "vapoursynth-nnedi3-12", "cmd": ["./autogen.sh"] },
						{ "cwd": "vapoursynth-nnedi3-12", "cmd": ["./configure", "--prefix={WORKSPACEDIR}"] },
						{ "cwd": "vapoursynth-nnedi3-12", "cmd": ["make", "-j{NPROC}"] },
						{ "cwd": "vapoursynth-nnedi3-12", "cmd": ["make", "install"] }
					]
				}
			},
			"release_files": {
				"linux-.*": ["{WORKSPACEDIR}/lib/libnnedi3.so"],
				"darwin-.*": ["{WORKSPACEDIR}/lib/libnnedi3.dylib"]
			},
			"additional_files": {
				".*": ["{BUILDDIR}/vapoursynth-nnedi3-12/readme.rst", "{BUILDDIR}/vapoursynth-nnedi3-12/gpl2.txt"]
			},
			"tests": {
				".*": ["process-blank"]
			}
		}
	]
}
