{
	"name": "AddGrain",
	"type": "VSPlugin",
	"description": "Port of the Avisynth AddGrain filter",
	"identifier": "com.holywu.addgrain",
	"github": "https://github.com/HomeOfVapourSynthEvolution/VapourSynth-AddGrain",
	"file_definitions": {
		"test-filter-0.vpy": {
			"path": "{TESTDIR}",
			"encoding": "text/utf-8",
			"data": "import vapoursynth as vs\ncore = vs.core\ncore.std.LoadPlugin('{TESTDIR}/{PLUGIN_FILENAME}')\nc = core.std.BlankClip(format=vs.YUV420P8,width=320,height=240,length=10)\nc = core.grain.Add(c)\nc.set_output(0)\n"
		}
	},
	"tests": [
		{
			"name": "test-filter-0",
			"create_files": [
				"test-filter-0.vpy"
			],
			"commands": [
				{
					"cwd": "{TESTDIR}",
					"cmd": [
						"{VSPIPE}",
						"test-filter-0.vpy",
						"--"
					]
				}
			]
		}
	],
	"releases": [
		{
			"version": "r10",
			"published": "2022-02-26T17:30:05Z",
			"source": "https://github.com/HomeOfVapourSynthEvolution/VapourSynth-AddGrain/archive/refs/tags/r10.tar.gz",
			"hash": "0d5f4addca0d852cc973b82e355c3a78dfc9eeedeb68fd2748ed20325dca6d85",
			"filename": "VapourSynth-AddGrain-r10.tar.gz",
			"additional_files": {
				".*": [
					"{BUILDDIR}/{DL_DIRECTORY}/LICENSE",
					"{BUILDDIR}/{DL_DIRECTORY}/README.md"
				]
			},
			"build": {
				".*": {
					"commands": [
						{
							"cmd": [
								"tar",
								"xzf",
								"{DL_FILENAME}"
							]
						},
						{
							"cwd": "{DL_DIRECTORY}",
							"cmd": [
								"meson",
								"rewrite",
								"kwargs",
								"delete",
								"target",
								"addgrain",
								"install_dir",
								"foobar"
							]
						},
						{
							"cwd": "{DL_DIRECTORY}",
							"cmd": [
								"meson",
								"setup",
								"--prefix={WORKSPACEDIR}",
								"--libdir={WORKSPACEDIR}/lib",
								"build"
							]
						},
						{
							"cwd": "{DL_DIRECTORY}",
							"cmd": [
								"ninja",
								"-C",
								"build"
							]
						},
						{
							"cwd": "{DL_DIRECTORY}",
							"cmd": [
								"ninja",
								"-C",
								"build",
								"install"
							]
						}
					],
					"dependencies": []
				}
			},
			"buildtools_dependencies": {
				".*": [
					{
						"name": "meson",
						"version": [
							">=",
							"0.60.0"
						]
					},
					{
						"name": "ninja",
						"version": [
							">=",
							"1.10.0"
						]
					}
				]
			},
			"release_files": {
				"linux-.*": [
					"{WORKSPACEDIR}/lib/libaddgrain.so"
				],
				"darwin-.*": [
					"{WORKSPACEDIR}/lib/libaddgrain.dylib"
				]
			},
			"tests": {
				".*": [
					"test-filter-0"
				]
			}
		}
	]
}
